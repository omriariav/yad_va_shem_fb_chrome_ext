{
  "name": "Unofficial YADVASHEM Facebook Chrome Extension",
  "description": "YADVASHEM is the unofficial tool that lets you lookup Facebook profiles lastnames in the holocaust database of Yad Va Shem museum. Developed by @omriariav",
  "short_name": "YADVASHEM Facebook Chrome Extension by @omriariav",
  "homepage_url": "http://medium.com/@omriariav",
    "icons": {
     "16": "icons/16x16.png",
     "48": "icons/48x48.png",
     "38":  "icons/48x48.png",
     "128": "icons/128x128.png"
  },
  "background": {
    "scripts": ["js/jquery-2.1.3.js", "js/bg.js"]
  },
  "permissions": [
    "*://*.facebook.com/*"
  ],
  "content_scripts": [
      {
          "matches": ["https://www.facebook.com/*"],
          "css": ["css/content.css"],
          "js": ["js/jquery-2.1.3.js","js/content.js"]
      }
  ],
  "options_page": "html/options.html",
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://*.facebook.com https://ajax.googleapis.com https://maxcdn.bootstrapcdn.com; object-src 'self'",
  "version": "1.0",
  "manifest_version": 2
}